#include <stdio.h>
int main() {
    int n;
    scanf("%d", &n);
    if (n <= 0) {
        printf("Input must be greater than 0.\n");
        return 1;
    }
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= n - i; j++) {
            printf(" "); 
        }
        for (int k = 1; k <= n; k++) {
            printf("*");
        }
        printf("\n");
    }
    return 0; 
    
}
