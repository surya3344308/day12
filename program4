#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int main() {
    int n;
    scanf("%d", &n);

    int stars = 2 * n - 1;

    for (int i = 0; i < n; i++) {
        for (int s = 0; s < i; s++) {
            printf(" ");
        }
        for (int j = 0; j < stars - 2 * i; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
